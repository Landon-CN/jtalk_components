{
    "compilerOptions": {
        "noImplicitThis": true,
        "strictNullChecks": true,
        "noImplicitAny": true,
        "allowSyntheticDefaultImports": true,
        "sourceMap": true,
        "allowJs": true,
        "jsx": "react",
        "target": "es6",
        "rootDir": "src",
        "lib": [
            "es6",
            "dom",
            "dom.iterable",
            "scripthost"
        ]
    },
    "exclude": [
        "node_modules",
        "build",
        "dist",
        "**/*.svg"
    ],
    "awesomeTypescriptLoaderOptions": {
        "useBabel": true,
        "useCache": true
    },
    "types": [
        "typePatches"
    ]
}
{
    "compilerOptions": {
        "module": "es2015",
        "moduleResolution": "node",
        "noImplicitThis": true,
        "strictNullChecks": true,
        "noImplicitAny": true,
        "allowSyntheticDefaultImports": true,
        "sourceMap": true,
        "allowJs": true,
        "jsx": "react",
        "rootDir": "src",
        "lib": [
            "dom",
            "es5",
            "es2015.promise"
        ]
    },
    "exclude": [
        "node_modules",
        "build",
        "dist"
    ],
    "types": [
        "typePatches"
    ]
}